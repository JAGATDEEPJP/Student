		function formToJSON() 
		{
	        var a = $("#name").val();
	        var b = $("#rollno").val();
	        var c = $("#phy").val();
	        var d = $("#chem").val();
	        var e = $("#math").val();
	        var f = $("#dob").val();
			var jsonObj = JSON.stringify({
	        	"name_":a,
	        	"rollno_":b,
	        	"phy_":c,
	        	"chem_":d,
	        	"math_":e,
	        	"dob_":f
	        	});
			return jsonObj;
		}
		
		function saveStudent()
		{
            var jersey_url = "http://localhost:8080/StudentData_Image/rest/json/create_student";
            $.ajax({
                type: 'POST', // GET
        		contentType: 'application/json',
                url: jersey_url,
                dataType: "json", // data type of response
                data: formToJSON(),
                success: message
            });
		}
		
		function message()
		{
			alert("Save Successfully.");
		}	
	</script>	
	
	<script type="text/javascript">
		$('#displaystudentdiv').ready(function()
		{
			$('#submitrno').click(function()
			{
				showDetails();
				$('#dresult').show();
			});
		});
		function showDetails()
		{
            var jersey_url = "http://localhost:8080/StudentData_Image/rest/json/show_student";// "<%=request.getContextPath() %>";
            $.ajax({
                type: 'POST', // GET
        		contentType: 'application/json',
                url: jersey_url,
                dataType: "json", // data type of response
                data: formToJSON2(),
                success: renderDetails
            });
		}
		function renderDetails(data)
		{
	        console.log(data);
			$("#sname").html(data.name);
			$("#srollno").html(data.rollno);
			$("#sphy").html(data.phy);
			$("#schem").html(data.chem);
			$("#smath").html(data.math);
			$("#sdob").html(data.dob);
			$("#result").show();
		}
		function formToJSON2() 
		{ 
	        var b = $("#sroll").val();
			var jsonObj = JSON.stringify({
	        	"rollno_":b,
	        	});
			return jsonObj;
		}
	</script>
